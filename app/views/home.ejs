<!DOCTYPE html>
<html lang="pt-br">

<head>
  <% include ./particles/base.ejs %>
</head>

<body>
  <br>
  <% if (typeof result !== 'undefined' && result !== null) { %>
  <div id="container" class="container">
    <div class="row">
      <% for(let i = 0; i < result.files.length; i++) { %>
      <div class="col m3">
        <div class="card">
          <% if (result.files[i].tag === 'movie') {  %>
          <%- include('cards/home/movie', {file: result.files[i], fileTMDB: result.TMDB[i], idFile: result.files[i].id}) %>
          <% } else if (result.files[i].tag === 'tv') { %>
          <%- include('cards/home/tv', {file: result.files[i], fileTMDB: result.TMDB[i], idFile: result.files[i].id}) %>
          <% } else { %>
          <%- include('cards/home/default', {file: result.files[i]}) %>
          <% }; %>
        </div>
      </div>
      <% }; %>
    </div>
  </div>
  <% }; %>

  <%- include('particles/footer') %>