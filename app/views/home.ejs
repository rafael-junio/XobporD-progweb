<!DOCTYPE html>
<html lang="pt-br">

<head>
  <% include ./particles/base.ejs %>
</head>

<body>
  <% if (result.files.length > 0) { %>
  <div id="container" class="container">
    <div class="row">
      <% for(let i = 0; i < result.files.length; i++) { %>
        <div class="col m3">
        <div class="card">
          <% if (result.files[i].tag === 'movie') {  %>
          <%- include('cards/movie', {file: result.files[i]}) %>
          <% } else if (result.files[i].tag === 'tv') { %>
          <%- include('cards/tv', {file: result.files[i]}) %>
          <% } else { %>
          <%- include('cards/default', {file: result.files[i]}) %>
          <% }; %>
        </div>
      </div>
        <% }; %>
    </div>
  </div>
  <% }; %>
</body>

</html>