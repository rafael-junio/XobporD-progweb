<div id="upload" class="modal">
  <div class="modal-content" id="modalContent">
    <ul class="stepper parallel horizontal">
      <li class="step active">
        <div class="step-title">choose File</div>
        <div class="step-content">
          <form method="POST" action="/media/search" class="row">
            <div class="row">
              <div class="input-field col s4">
                <i class="material-icons prefix">title</i>
                <input id="title" name="title" type="text" required />
                <label for="title">Título</label>
              </div>

              <div class="input-field col s4">
                <i class="material-icons prefix">movie</i>
                <select id="typeMedia" name="typeMedia">
                  <option value="movie">Filme</option>
                  <option value="tv">Série</option>
                  <option value="3">Audio</option>
                </select>
                <label for="typeMedia">Tipo</label>
              </div>

              <div class="input-field col s4">
                <i class="material-icons prefix">language</i>
                <select id="language" name="language">
                  <option value="pt-BR">Português</option>
                  <option value="en-US">Inglês</option>
                  <option value="es">Espanhol</option>
                </select>
                <label for="language">Idioma</label>
              </div>
            </div>

            <div class="center-align">
              <button
                class="btn waves-effect waves-light"
                type="submit"
                name="pesquisa"
              >
                Pesquisar
                <i class="material-icons right">search</i>
              </button>
            </div>
          </form>
          <div class="step-actions" id="stepActions">
            <button class="btn next-step" data-validator="validateStepOne">
              Continue
            </button>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
