<div class="container">

    <div class="row">

        <% for(let i = 0; i < tvShow.results.length; i++) { %>
            <div class="col m5">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src=<%= "https://image.tmdb.org/t/p/w500" + tvShow.results[i].poster_path %>>
                </div>
                <div class="card-content">
                    <span
                        class="card-title activator grey-text text-darken-4"><%= tvShow.results[i].name %> %><i
                            class="material-icons right">more_vert</i></span>
                    <p><%= tvShow.results[i].overview %></p>
                </div>
                <div class="card-reveal">
                    <span
                        class="card-title grey-text text-darken-4"><%= tvShow.results[i].name %> %><i
                            class="material-icons right">close</i></span>
                            <p><strong>Popularidade:</strong> <%= tvShow.results[i].popularity %></p>
                            <p><strong>Avaliação:</strong> <%= tvShow.results[i].vote_average %></p>
                            <p><strong>Data do Primeiro Episódio:</strong> <%= new Date(tvShow.results[i].first_air_date).toLocaleDateString() %></p>
                            <p><strong>País de Origem:</strong> <%= tvShow.results[i].origin_country %></p>
                            <p><strong>Idioma Original:</strong> <%= tvShow.results[i].original_language %></p>
                            <p><strong>Título Original:</strong> <%= tvShow.results[i].original_name %></p>
                            <!-- <p><%= tvShow.results[i].poster_path %></p> -->
                            <!-- <p><%= tvShow.results[i].id %></p> -->
                            <!-- <p><%= tvShow.results[i].backdrop_path %></p> -->
                            <!-- <p><%= tvShow.results[i].overview %></p> -->
                            <!-- <p><%= tvShow.results[i].genre_ids %></p> -->
                            <!-- <p><%= tvShow.results[i].vote_count %></p> -->
                            <!-- <p><%= tvShow.results[i].name %></p> -->
                    <button class="waves-effect waves-light btn" type="button"> Play </button>
                </div>
            </div>
        </div>
        <% }%>
        </div>
    </div>